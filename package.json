{
  "name": "dumi-pnpm-template",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.ts",
  "module": "src/index.ts",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "lerna version",
    "release:minor": "lerna version minor",
    "release:patch": "lerna version patch",
    "commit": "git-cz",
    "prepare": "husky install",
    "lerna:bs": "lerna bootstrap", 
    "lerna:clean": "lerna clean", 
    "lerna:pub": "lerna publish",
    "lerna:list": "lerna list",
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father-build", 
    "deploy": "npm run docs:build && npm run docs:deploy",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "files": [
    "src/[!.]*",
    "dist"
  ],
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "peerDependencies": {
    "@formily/antd": "^2.0.0-rc.11",
    "@formily/core": "^2.0.0-rc.11",
    "@formily/react": "^2.0.0-rc.11",
    "antd": "^4.16.13",
    "moment": "^2.29.1",
    "react": "^16.12.0 || ^17.0.0"
  },
  "devDependencies": {
    "@formily/antd": "^2.0.0-rc.11",
    "@formily/core": "^2.0.0-rc.11",
    "@formily/react": "^2.0.0-rc.11",
    "@umijs/test": "^3.0.5",
    "antd": "^4.16.13",
    "babel-plugin-import": "^1.1.1",
    "dumi": "1.1.38",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "moment": "^2.29.1",
    "prettier": "^2.2.1",
    "react": "^17.0.0",
    "yorkie": "^2.0.0", 
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2", 
    "cz-customizable": "^6.3.0",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^6.0.0",
    "standard": "^16.0.3",
    "standard-version": "^9.3.0",
    "validate-commit-msg": "^2.14.0",
    "lerna": "^4.0.0"
  },
  "dependencies": {
    "fetch-jsonp": "^1.2.1",
    "file-saver": "^2.0.5",
    "lodash": "^4.17.21",
    "rc-animate": "^3.1.1",
    "universal-base64": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MIchaelJier/dumi-pnpm-template.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MIchaelJier/dumi-pnpm-template/issues"
  },
  "homepage": "https://github.com/MIchaelJier/dumi-pnpm-template#readme"
}
